<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.triviabilities.simpsonstrivia"
      android:versionCode="1"
      android:versionName="1.0">
	
	<supports-screens
        android:largeScreens  = "true"
        android:smallScreens  = "true"
        android:normalScreens = "true"
        android:anyDensity    = "true"   />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/icon"
        android:allowBackup="false"
        android:label="@string/app.title"
        android:name="com.simpsonstrivia.MyApplication"
        android:theme="@style/MyMaterialTheme">
       
        <activity
            android:name="com.simpsonstrivia.activities.MainMenuActivity"
            android:theme="@style/MyMaterialTheme.BrandedLaunch"
            android:label="@string/app.title"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.simpsonstrivia.activities.QuestionActivity" android:screenOrientation="portrait" />
        <activity android:name="com.simpsonstrivia.activities.HighScoreActivity" android:screenOrientation="portrait" android:label="@string/results.tab.leaderboard" />
        <activity android:name="com.simpsonstrivia.activities.ResultsActivity" android:screenOrientation="portrait" />

    </application>
</manifest>